<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toast_constraint_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/round_custom_toast_corner"


    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_marginStart="@dimen/_22sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:id="@+id/custom_toast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The meal is added"
        android:fontFamily="@font/fonts"
        android:textStyle="bold"


        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/toast_img"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_done"
        android:layout_marginStart="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@+id/custom_toast_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_25sdp"/>






</androidx.constraintlayout.widget.ConstraintLayout>